<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="projectv2.technocoders.com.finalproject.home.Navigation1"
    android:weightSum="30"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textappform"
            android:text="APPLICATION FORM"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textdateduty"
            android:text="Date"
            android:textSize="20sp"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <Button
            android:id="@+id/buttondate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="35dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:ignore="LabelFor,RelativeOverlap,TextFields" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textbegintime"
            android:text="Begin Time"
            android:textSize="20sp"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <Button
            android:id="@+id/buttonBeginTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="35dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:ignore="LabelFor,RelativeOverlap" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textduration"
            android:text="End Time"
            android:textSize="20sp"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <Button
            android:id="@+id/buttonEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="35dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:ignore="LabelFor,RelativeOverlap" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textlocation"
            android:text="Location"
            android:textSize="20sp"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <EditText
            android:id="@+id/editTextLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="35dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:ignore="LabelFor,RelativeOverlap" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textpurpose"
            android:text="Purpose"
            android:textSize="20sp"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <EditText
            android:id="@+id/editTextPurpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="35dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:ignore="LabelFor,RelativeOverlap" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/ButtonSend"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:paddingTop="10dp"
            android:text="SEND"
            tools:ignore="HardcodedText,RtlHardcoded" />
    </RelativeLayout>
</LinearLayout>