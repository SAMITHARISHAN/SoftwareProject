<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="projectv2.technocoders.com.finalproject.home.leave.leavedetails.leavetakendetails.LeaveTakenDetails">

    <Button
        android:id="@+id/buttonsendavailableleaves"
        android:text="CHECK AVAILABLE LEAVES"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:text="Leave Type"
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_width="180dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Remaining Leaves"
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_width="180dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_listavailableleaves"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        />

</LinearLayout>
