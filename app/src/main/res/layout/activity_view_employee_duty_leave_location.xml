<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="projectv2.technocoders.com.finalproject.home.leave.leavedetails.leavetakendetails.LeaveTakenDetails">

    <Button
        android:id="@+id/buttonchecklocation"
        android:text="CHECK LOCATIONS"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:text="Appointment time"
                android:textAlignment="center"
                android:textSize="14sp"
                android:layout_width="90dp"
                android:layout_height="40dp" />

            <TextView
                android:text="End time"
                android:textAlignment="center"
                android:textSize="14sp"
                android:layout_width="90dp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="location"
                android:textAlignment="center"
                android:textSize="14sp"
                android:layout_width="90dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Tracking time"
                android:textAlignment="center"
                android:textSize="14sp"
                android:layout_width="90dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_listtracklocation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        />

</LinearLayout>
