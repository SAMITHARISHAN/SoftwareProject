<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="projectv2.technocoders.com.finalproject.home2.handlingemployeeLeaverequests.accept_reject_EMP_leaves.Employee_Accept_Reject_Leaves">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:text="LEAVE FORM"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_width="100dp"
            android:text="LEAVE TYPE :"
            android:textStyle="bold"
            android:textSize="14sp"
            android:id="@+id/leavetype" />

        <TextView
            android:id="@+id/requestleavetype"
            android:layout_height="50dp"
            android:layout_width="150dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="58dp"
            android:layout_alignTop="@+id/leavetype" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_width="100dp"
            android:text="REASON        :"
            android:textStyle="bold"
            android:textSize="14sp"
            android:id="@+id/reason" />

        <TextView
            android:id="@+id/requestreason"
            android:layout_height="50dp"
            android:layout_width="150dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="58dp"
            android:layout_alignTop="@+id/reason" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/buttonaccept"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:text="ACCEPT"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonreject"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="REJECT"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="14dp"
            android:layout_alignBaseline="@+id/buttonaccept"
            android:layout_alignBottom="@+id/buttonaccept"
            android:layout_toEndOf="@+id/buttonaccept" />
    </RelativeLayout>

</LinearLayout>
